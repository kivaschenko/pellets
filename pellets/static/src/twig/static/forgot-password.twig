<body class="login-page">

  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-7 col-xl-8 d-none d-lg-block">
        <img src="{{ folder.img }}forgot-password.svg" alt="" class="img-fluid w-100">
      </div>
      <div class="col-lg-5 col-xl-4 d-flex justify-content-center align-items-center">
        <div class="card mb-3">
          <div class="card-body p-4">
            <h3>Reset Password</h3>
            <p class="font-weight-light text-secondary">enter your email address</p>
            <hr>
            <form>
              <div class="form-group">
                <span class="input-icon">
                  <i class="material-icons">mail_outline</i>
                  <input type="email" class="form-control" id="resetEmailInput" placeholder="Email address" autocomplete="off" required="">
                </span>
              </div>
              <button type="button" class="btn btn-danger btn-block">RESET</button>
            </form>
            <hr>
            <a class="btn btn-light has-icon btn-sm" href="login2.html">
              <i class="material-icons">chevron_left</i> Back to Login
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

