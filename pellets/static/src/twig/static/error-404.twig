<!doctype html>
<html lang="en">

<head>
  {% include '../include/_meta.twig' %}
  <!-- Font & Icon -->
  <link rel="stylesheet" href="{{ folder.font }}inter/inter.min.css">
  <link href="{{ folder.plugins }}material-design-icons-iconfont/material-design-icons.min.css" rel="stylesheet">
  <!-- Plugins -->
  <!-- CSS plugins goes here -->
  {% include '../include/_main-css.twig' %}
  <title>{{ title }}</title>
</head>

<body>

  <div class="container pt-3">
    <div class="row justify-content-center text-center">
      <div class="col-8 col-lg-6 col-xl-5">
        <img src="{{ folder.img }}404.svg" class="img-fluid" alt="Page not found">
      </div>
      <div class="col-12 my-3">
        <h2>404 Page Not Found</h2>
        <p class="lead text-dark">Oopps. The page you were looking for doesn't exist.</p>
        <p class="lead small text-secondary">You may have mistyped the address or the page may have moved. Try searching below.</p>
        <form class="form-inline d-inline-flex">
          <span class="input-icon">
            <i class="material-icons">search</i>
            <input type="search" placeholder="Search..." class="form-control shadow-none bg-light w-100">
          </span>
        </form>
      </div>
    </div>
  </div>

  <!-- Plugins -->
  <!-- JS plugins goes here -->

</body>

</html>