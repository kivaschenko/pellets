<div class="inner-wrapper">

        <!-- Inner sidebar -->
        <div class="inner-sidebar">

          <!-- Inner sidebar header -->
          <div class="inner-sidebar-header justify-content-center">
            <button class="btn btn-warning has-icon btn-block" type="button" data-toggle="modal" data-target="#taskModal">
              <i data-feather="plus" class="mr-2"></i> New Task
            </button>
          </div>
          <!-- /Inner sidebar header -->

          <!-- Inner sidebar body -->
          <div class="inner-sidebar-body p-0">
            <div class="p-3 h-100" data-simplebar>
              <nav class="nav nav-pills nav-gap-y-1 flex-column">
                <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon active"><i class="material-icons mr-2">list</i>All<span class="badge badge-pill badge-primary ml-auto">8</span></a>
                <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon"><i class="material-icons mr-2">check_circle_outline</i>Done<span class="badge badge-pill badge-secondary ml-auto">2</span></a>
                <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon"><i class="material-icons mr-2">stars</i>Important<span class="badge badge-pill badge-secondary ml-auto">3</span></a>
                <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon"><i class="material-icons mr-2">archive</i>Archive</a>
                <a href="javascript:void(0)" class="nav-link nav-link-faded has-icon"><i class="material-icons mr-2">delete</i>Trash</a>
              </nav>
            </div>
          </div>
          <!-- /Inner sidebar body -->

        </div>
        <!-- /Inner sidebar -->

        <!-- Inner main -->
        <div class="inner-main">

          <!-- Inner main header -->
          <div class="inner-main-header">
            <a class="nav-link nav-icon rounded-circle nav-link-faded mr-3 d-md-none" href="#" data-toggle="inner-sidebar"><i class="material-icons">arrow_forward_ios</i></a>
            <h5 class="mb-0">All todo lists</h5>
          </div>
          <!-- /Inner main header -->

          <!-- Inner main body -->
          <div class="inner-main-body p-0">
            <ul class="list-group list-group-flush">{% for todo in todos %}
              <li class="list-group-item has-icon">
                <div class="media todo-item{% if (todo.done) %} done{% endif %}">
                  <div class="custom-color custom-color-lg">
                    <div class="color-item">
                      <input type="checkbox" name="item{{ loop.index }}" value="primary" id="item{{ loop.index }}" class="custom-control-input" data-toggle="todo-item"{% if (todo.done) %} checked{% endif %}>
                      <label class="rounded-circle" for="item{{ loop.index }}"></label>
                    </div>
                  </div>
                  <div class="media-body ml-3">
                    <h6>{% if (todo.important) %}<i class="fa fa-star"></i> {% endif %}{{ todo.title }}</h6>
                    <p class="small text-secondary mb-0">{{ todo.summary }}</p>
                  </div>
                  <div class="btn-group btn-group-xs" role="group">
                    <a href="javascript:void(0)" class="btn btn-link btn-icon bigger-130 text-success"><i data-feather="edit"></i></a>
                    <a href="javascript:void(0)" class="btn btn-link btn-icon bigger-130 text-danger"><i data-feather="trash"></i></a>
                  </div>
                  <div class="dropdown" hidden>
                    <button class="btn btn-icon dropdown-toggle btn-sm" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static"></button>
                    <div class="dropdown-menu dropdown-menu-right">
                      <a class="dropdown-item" href="#">Action</a>
                      <a class="dropdown-item" href="#">Another action</a>
                      <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                  </div>
                  <time class="text-muted small">{{ todo.time }}</time>
                </div>
              </li>{% endfor %}
            </ul>
          </div>
          <!-- /Inner main body -->

        </div>
        <!-- /Inner main -->

      </div>

      <!-- New Task -->
      <div class="modal fade" id="taskModal" tabindex="-1" role="dialog" aria-labelledby="taskModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <form>
              <div class="modal-header d-flex align-items-center">
                <h6 class="modal-title mb-0" id="taskModalLabel">New Task</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">Ã—</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="form-group">
                  <label for="taskTitle">Title</label>
                  <input type="text" class="form-control" id="taskTitle" placeholder="Enter task title" autofocus>
                </div>
                <div class="form-group">
                  <label for="taskDesc">Description</label>
                  <textarea class="form-control autosize" id="taskDesc" placeholder="Enter task description"></textarea>
                </div>
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="taskImportant">
                  <label class="custom-control-label" for="taskImportant">Important</label>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>
